{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "style/*": [
        "src/style/*"
      ]
    },
    "outDir": "./dist",
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts"
  ]
}